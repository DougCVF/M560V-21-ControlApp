<Window x:Class="M560V_21_ControlApp.Windows.DatabaseBackupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Backup Manager"
        Height="480" Width="700"
        Background="#1E1E1E"
        Foreground="White"
        FontFamily="Segoe UI"
        FontSize="14"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Database Backup &amp; Restore"

                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#58A6FF"
                   Margin="0,0,0,10"/>

        <!-- Current Backup Folder -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Backup Folder:" VerticalAlignment="Center"/>
            <TextBlock x:Name="lblBackupPath"
                       Text=""
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="#A0FFA0"
                       TextTrimming="CharacterEllipsis"
                       Width="450"/>
            <Button x:Name="btnSelectFolder"
                    Content="Select Folder..."
                    Margin="10,0,0,0"
                    Width="120"
                    Click="btnSelectFolder_Click"/>
        </StackPanel>

        <!-- Backup List -->
        <GroupBox Grid.Row="2" Header="Available Backups" Margin="0,5,0,10">
            <ListBox x:Name="lstBackups"
                     Background="#252526"
                     Foreground="White"
                     BorderBrush="#333"
                     BorderThickness="1"/>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnCreate" Content="Create Backup" Width="130" Margin="5,0" Click="btnCreate_Click"/>
            <Button x:Name="btnRestore" Content="Restore Backup" Width="130" Margin="5,0" Click="btnRestore_Click"/>
            <Button x:Name="btnRefresh" Content="Refresh List" Width="130" Margin="5,0" Click="btnRefresh_Click"/>
            <Button x:Name="btnClose" Content="Close" Width="130" Margin="5,0" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
