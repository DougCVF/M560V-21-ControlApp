<Window x:Class="M560V_21_ControlApp.Windows.DatabaseBackupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Backup &amp; Restore"
        Height="420" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1B1B1B"
        Foreground="#E0E0E0"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- ===== COLOR RESOURCES ===== -->
        <SolidColorBrush x:Key="AccentBlue" Color="#0094FF"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#1FAEFF"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#252526"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="TextBrush" Color="#E0E0E0"/>

        <!-- ===== BUTTON STYLE ===== -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="{StaticResource HoverBlue}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource HoverBlue}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#444"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== LISTBOX STYLE ===== -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource PanelBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2F2F2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ===== LAYOUT ===== -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Database Backup &amp; Restore"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource AccentBlue}"
                   Margin="0 0 0 15"/>

        <!-- Backup list -->
        <Border Grid.Row="1"
                CornerRadius="6"
                Background="{StaticResource PanelBackground}"
                BorderBrush="{StaticResource PanelBorder}"
                BorderThickness="1">
            <ListBox x:Name="lstBackups"
                     Margin="5"
                     SelectionMode="Single"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,18,0,0">
            <Button x:Name="btnCreateBackup"
                    Content="Create Backup"
                    Width="150"
                    Height="36"
                    Click="btnCreateBackup_Click"/>
            <Button x:Name="btnRestoreBackup"
                    Content="Restore Selected"
                    Width="150"
                    Height="36"
                    Click="btnRestoreBackup_Click"/>
            <Button x:Name="btnRefresh"
                    Content="Refresh"
                    Width="120"
                    Height="36"
                    Click="btnRefresh_Click"/>
            <Button x:Name="btnClose"
                    Content="Close"
                    Width="100"
                    Height="36"
                    Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
