<Window x:Class="M560V_21_ControlApp.Controls.PartEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Part"
        Width="1100" Height="760"
        MinWidth="980" MinHeight="640"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        Foreground="#E0E0E0"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,6,0,6"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="#454545"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Background" Value="#2F2F2F"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
        </Style>

        <SolidColorBrush x:Key="CardBg" Color="#262626"/>
        <SolidColorBrush x:Key="CardBorder" Color="#3A3A3A"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- MAIN GRID -->
        <Grid Grid.Row="0" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <!-- Input fields -->
                <ColumnDefinition Width="2*"/>
                <!-- Reference images -->
            </Grid.ColumnDefinitions>

            <!-- LEFT: FIELDS (EXACT DB ORDER: 21 fields) -->
            <Border Grid.Column="0" Background="{StaticResource CardBg}" BorderBrush="{StaticResource CardBorder}" BorderThickness="1" CornerRadius="6" Padding="16" Margin="0,0,12,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <!-- 21 rows for 21 fields -->
                            <RowDefinition Height="Auto"/>
                            <!-- PartNumber -->
                            <RowDefinition Height="Auto"/>
                            <!-- Description -->
                            <RowDefinition Height="Auto"/>
                            <!-- StockWidth -->
                            <RowDefinition Height="Auto"/>
                            <!-- StockDepth -->
                            <RowDefinition Height="Auto"/>
                            <!-- StockHeight -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op10PickXOffset -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op10PickYOffset -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op10PickZOffset -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op10CycleTime -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op20PickXOffset -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op20PickYOffset -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op20PickZOffset -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op20FinXOffset -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op20FinYOffset -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op20FinZOffset -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op20CycleTime -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op10VisePSI -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op20VisePSI -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op10ProgramName -->
                            <RowDefinition Height="Auto"/>
                            <!-- Op20ProgramName -->
                            <RowDefinition Height="8"/>
                            <!-- spacer -->
                        </Grid.RowDefinitions>

                        <!-- 1 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Part Number"/>
                        <TextBox   Grid.Row="0" Grid.Column="1" x:Name="txtPartNumber"/>

                        <!-- 2 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Description"/>
                        <TextBox   Grid.Row="1" Grid.Column="1" x:Name="txtDescription"/>

                        <!-- 3-5 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Stock Width"/>
                        <TextBox   Grid.Row="2" Grid.Column="1" x:Name="txtStockWidth"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Stock Depth"/>
                        <TextBox   Grid.Row="3" Grid.Column="1" x:Name="txtStockDepth"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Stock Height"/>
                        <TextBox   Grid.Row="4" Grid.Column="1" x:Name="txtStockHeight"/>

                        <!-- 6-8 -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Op10 Pick X Offset"/>
                        <TextBox   Grid.Row="5" Grid.Column="1" x:Name="txtOp10PickXOffset"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Op10 Pick Y Offset"/>
                        <TextBox   Grid.Row="6" Grid.Column="1" x:Name="txtOp10PickYOffset"/>

                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Op10 Pick Z Offset"/>
                        <TextBox   Grid.Row="7" Grid.Column="1" x:Name="txtOp10PickZOffset"/>

                        <!-- 9 -->
                        <TextBlock Grid.Row="8" Grid.Column="0" Text="Op10 Cycle Time (min)"/>
                        <TextBox   Grid.Row="8" Grid.Column="1" x:Name="txtOp10CycleTime"/>

                        <!-- 10-12 -->
                        <TextBlock Grid.Row="9"  Grid.Column="0" Text="Op20 Pick X Offset"/>
                        <TextBox   Grid.Row="9"  Grid.Column="1" x:Name="txtOp20PickXOffset"/>

                        <TextBlock Grid.Row="10" Grid.Column="0" Text="Op20 Pick Y Offset"/>
                        <TextBox   Grid.Row="10" Grid.Column="1" x:Name="txtOp20PickYOffset"/>

                        <TextBlock Grid.Row="11" Grid.Column="0" Text="Op20 Pick Z Offset"/>
                        <TextBox   Grid.Row="11" Grid.Column="1" x:Name="txtOp20PickZOffset"/>

                        <!-- 13-15 -->
                        <TextBlock Grid.Row="12" Grid.Column="0" Text="Op20 Fin X Offset"/>
                        <TextBox   Grid.Row="12" Grid.Column="1" x:Name="txtOp20FinXOffset"/>

                        <TextBlock Grid.Row="13" Grid.Column="0" Text="Op20 Fin Y Offset"/>
                        <TextBox   Grid.Row="13" Grid.Column="1" x:Name="txtOp20FinYOffset"/>

                        <TextBlock Grid.Row="14" Grid.Column="0" Text="Op20 Fin Z Offset"/>
                        <TextBox   Grid.Row="14" Grid.Column="1" x:Name="txtOp20FinZOffset"/>

                        <!-- 16 -->
                        <TextBlock Grid.Row="15" Grid.Column="0" Text="Op20 Cycle Time (min)"/>
                        <TextBox   Grid.Row="15" Grid.Column="1" x:Name="txtOp20CycleTime"/>

                        <!-- 17-18 -->
                        <TextBlock Grid.Row="16" Grid.Column="0" Text="Op10 Vise PSI"/>
                        <TextBox   Grid.Row="16" Grid.Column="1" x:Name="txtOp10VisePSI"/>

                        <TextBlock Grid.Row="17" Grid.Column="0" Text="Op20 Vise PSI"/>
                        <TextBox   Grid.Row="17" Grid.Column="1" x:Name="txtOp20VisePSI"/>

                        <!-- 19-20 -->
                        <TextBlock Grid.Row="18" Grid.Column="0" Text="Op10 Program Name"/>
                        <TextBox   Grid.Row="18" Grid.Column="1" x:Name="txtOp10ProgramName"/>

                        <TextBlock Grid.Row="19" Grid.Column="0" Text="Op20 Program Name"/>
                        <TextBox   Grid.Row="19" Grid.Column="1" x:Name="txtOp20ProgramName"/>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- RIGHT: REFERENCE IMAGES (keeping behavior) -->
            <Border Grid.Column="1"
                    Background="{StaticResource CardBg}"
                    BorderBrush="{StaticResource CardBorder}" BorderThickness="1"
                    CornerRadius="6" Padding="16" Margin="12,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Op10 Z Offset Reference" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <Border Grid.Row="2" BorderBrush="{StaticResource CardBorder}" BorderThickness="1" CornerRadius="4">
                        <Viewbox Stretch="Uniform">
                            <Image x:Name="Op10Image"
                                   Source="/Assets/Op10Zoffset.png"
                                   Stretch="Uniform"/>
                        </Viewbox>
                    </Border>

                    <TextBlock Grid.Row="4" Text="Op20 Z Offset Reference" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <Border Grid.Row="6" BorderBrush="{StaticResource CardBorder}" BorderThickness="1" CornerRadius="4">
                        <Viewbox Stretch="Uniform">
                            <Image x:Name="Op20Image"
                                   Source="/Assets/Op20Zoffset.png"
                                   Stretch="Uniform"/>
                        </Viewbox>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- FOOTER -->
        <DockPanel Grid.Row="1" Margin="16,0,16,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save"   Click="Save_Click"/>
                <Button Content="Cancel" Click="Cancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
