<Window x:Class="M560V_21_ControlApp.Controls.PartEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Part" Height="650" Width="950"
        Background="#222" Foreground="White"
        WindowStartupLocation="CenterOwner">

    <!-- Two-column layout: left = existing fields, right = reference images -->
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
            <!-- image panel -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- =========================
             LEFT SIDE (existing form)
             ========================= -->
        <ScrollViewer Grid.Column="0" Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="0,10,16,10">
                <TextBlock Text="Part Number" Margin="0,5,0,0"/>
                <TextBox x:Name="txtPartNumber"/>

                <TextBlock Text="Description" Margin="0,5,0,0"/>
                <TextBox x:Name="txtDescription"/>

                <TextBlock Text="Stock Width" Margin="0,5,0,0"/>
                <TextBox x:Name="txtWidth"/>

                <TextBlock Text="Stock Depth" Margin="0,5,0,0"/>
                <TextBox x:Name="txtDepth"/>

                <TextBlock Text="Stock Height" Margin="0,5,0,0"/>
                <TextBox x:Name="txtHeight"/>

                <TextBlock Text="Op10 Pick X Offset" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp10X"/>

                <TextBlock Text="Op10 Pick Y Offset" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp10Y"/>

                <TextBlock Text="Op10 Pick Z Offset" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp10Z"/>

                <TextBlock Text="Op20 Pick X Offset" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp20X"/>

                <TextBlock Text="Op20 Pick Y Offset" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp20Y"/>

                <TextBlock Text="Op20 Pick Z Offset" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp20Z"/>

                <TextBlock Text="Op20 Fin X Offset" Margin="0,5,0,0"/>
                <TextBox x:Name="txtFinX"/>

                <TextBlock Text="Op20 Fin Y Offset" Margin="0,5,0,0"/>
                <TextBox x:Name="txtFinY"/>

                <TextBlock Text="Op20 Fin Z Offset" Margin="0,5,0,0"/>
                <TextBox x:Name="txtFinZ"/>

                <TextBlock Text="Op10 Vise PSI" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp10PSI"/>

                <TextBlock Text="Op20 Vise PSI" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp20PSI"/>

                <TextBlock Text="Op10 Program Name" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp10Prog"/>

                <TextBlock Text="Op20 Program Name" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp20Prog"/>

                <TextBlock Text="Op10 Cycle Time (min)" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp10Time"/>

                <TextBlock Text="Op20 Cycle Time (min)" Margin="0,5,0,0"/>
                <TextBox x:Name="txtOp20Time"/>
            </StackPanel>
        </ScrollViewer>

        <!-- =========================
             RIGHT SIDE (reference images)
             ========================= -->
        <Border Grid.Column="1" Grid.Row="1"
                Padding="10"
                CornerRadius="6"
                BorderThickness="1"
                BorderBrush="#444"
                Background="#1A1A1A">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                    <!-- Op10 image -->
                    <StackPanel>
                        <TextBlock Text="Op10 Z Offset Reference"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,5"/>
                        <Border BorderBrush="#555" BorderThickness="1" CornerRadius="4">
                            <Image Source="/Assets/Op10Zoffset.png"
                                   Stretch="Uniform"
                                   Height="360"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>
                    </StackPanel>

                    <!-- Op20 image -->
                    <StackPanel>
                        <TextBlock Text="Op20 Z Offset Reference"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,5"/>
                        <Border BorderBrush="#555" BorderThickness="1" CornerRadius="4">
                            <Image Source="/Assets/Op20Zoffset.png"
                                   Stretch="Uniform"
                                   Height="360"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- =========================
             BOTTOM BUTTONS
             ========================= -->
        <StackPanel Grid.ColumnSpan="2" Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
