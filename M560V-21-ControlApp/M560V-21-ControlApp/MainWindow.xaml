<Window x:Class="M560V_21_ControlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:M560V_21_ControlApp.Controls"
        Title="M560V-21 Control Application"
        Height="800" Width="1300"
        Background="#1B1B1B"
        Foreground="#E0E0E0"
        FontFamily="Segoe UI"
        FontSize="14"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Local brushes for menu/tab styling (theme handles most controls) -->
        <SolidColorBrush x:Key="AccentBlue" Color="#0094FF"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#1FAEFF"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#252526"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="TextBrush" Color="#E0E0E0"/>

        <!-- Menu -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- MenuItem (keep native submenus) -->
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#333"/>
                    <Setter Property="Foreground" Value="#1FAEFF"/>
                </Trigger>
                <Trigger Property="IsSubmenuOpen" Value="True">
                    <Setter Property="Background" Value="#333"/>
                    <Setter Property="Foreground" Value="#1FAEFF"/>
                </Trigger>
            </Style.Triggers>
            <Style.Resources>
                <Style TargetType="{x:Type MenuItem}">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Padding" Value="10,6"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="MenuItem">
                                <Border x:Name="Border" Background="{TemplateBinding Background}"
                                        Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                                    <DockPanel>
                                        <ContentPresenter ContentSource="Header"
                                                          VerticalAlignment="Center"
                                                          Margin="5,0,0,0"/>
                                    </DockPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#0094FF"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Height" Value="1"/>
                    <Setter Property="Margin" Value="2,4"/>
                    <Setter Property="Background" Value="#C0C0C0"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Separator">
                                <Border Background="{TemplateBinding Background}"
                                        Height="{TemplateBinding Height}" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>

        <!-- Tabs -->
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2,0,2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4,4,0,0">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#333"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource HoverBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status bar -->
        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>
    </Window.Resources>

    <!-- Main layout -->
    <DockPanel LastChildFill="True">

        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Backup &amp; Restore..." Click="MenuBackup_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="MenuExit_Click"/>
            </MenuItem>

            <MenuItem Header="_Navigation">
                <MenuItem Header="Back" Click="MenuBack_Click"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="View Help (Coming Soon)" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="About" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>

        <!-- Status -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Database:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtDbStatus" Text="Unknown" Margin="5,0,0,0" Foreground="{StaticResource AccentBlue}"/>
                </StackPanel>
            </StatusBarItem>
            <Separator Margin="20,0"/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Last Backup:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtLastBackup" Text="None" Margin="5,0,0,0" Foreground="{StaticResource AccentBlue}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Tabs -->
        <TabControl x:Name="MainTabControl"
                    Background="{StaticResource PanelBackground}"
                    Foreground="{StaticResource TextBrush}"
                    BorderBrush="{StaticResource PanelBorder}"
                    BorderThickness="1"
                    Margin="10"
                    Padding="5"
                    FontSize="15">

            <!-- RACK 1 -->
            <TabItem Header="Rack 1">
                <Grid Background="#1E1E1E">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.8*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Rows -->
                    <ScrollViewer Grid.Column="0">
                        <StackPanel Margin="10">
                            <controls:RackRowControl Title="Row 1" TrayType="Small"  Slots="10" StockWidthX="3.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 2" TrayType="Small"  Slots="10" StockWidthX="3.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 3" TrayType="Medium" Slots="5"  StockWidthX="6.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 4" TrayType="Medium" Slots="5"  StockWidthX="6.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 5" TrayType="Large"  Slots="4"  StockWidthX="8.0"  StockDepthY="10.0"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Overview image with highlight -->
                    <Border Grid.Column="1" Margin="10"
                            Background="{DynamicResource Brush.Panel}"
                            BorderBrush="{DynamicResource Brush.PanelBorder}"
                            BorderThickness="1" CornerRadius="6" Padding="6">
                        <controls:CellOverviewControl ActiveRack="1"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- RACK 2 -->
            <TabItem Header="Rack 2">
                <Grid Background="#1E1E1E">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.8*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0">
                        <StackPanel Margin="10">
                            <controls:RackRowControl Title="Row 1" TrayType="Small"  Slots="10" StockWidthX="3.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 2" TrayType="Small"  Slots="10" StockWidthX="3.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 3" TrayType="Medium" Slots="5"  StockWidthX="6.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 4" TrayType="Medium" Slots="5"  StockWidthX="6.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 5" TrayType="Large"  Slots="4"  StockWidthX="8.0"  StockDepthY="10.0"/>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Column="1" Margin="10"
                            Background="{DynamicResource Brush.Panel}"
                            BorderBrush="{DynamicResource Brush.PanelBorder}"
                            BorderThickness="1" CornerRadius="6" Padding="6">
                        <controls:CellOverviewControl ActiveRack="2"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- RACK 3 -->
            <TabItem Header="Rack 3">
                <Grid Background="#1E1E1E">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.8*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0">
                        <StackPanel Margin="10">
                            <controls:RackRowControl Title="Row 1" TrayType="Small"  Slots="10" StockWidthX="3.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 2" TrayType="Small"  Slots="10" StockWidthX="3.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 3" TrayType="Medium" Slots="5"  StockWidthX="6.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 4" TrayType="Medium" Slots="5"  StockWidthX="6.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 5" TrayType="Large"  Slots="4"  StockWidthX="8.0"  StockDepthY="10.0"/>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Column="1" Margin="10"
                            Background="{DynamicResource Brush.Panel}"
                            BorderBrush="{DynamicResource Brush.PanelBorder}"
                            BorderThickness="1" CornerRadius="6" Padding="6">
                        <controls:CellOverviewControl ActiveRack="3"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- RACK 4 -->
            <TabItem Header="Rack 4">
                <Grid Background="#1E1E1E">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.8*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0">
                        <StackPanel Margin="10">
                            <controls:RackRowControl Title="Row 1" TrayType="Small"  Slots="10" StockWidthX="3.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 2" TrayType="Small"  Slots="10" StockWidthX="3.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 3" TrayType="Medium" Slots="5"  StockWidthX="6.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 4" TrayType="Medium" Slots="5"  StockWidthX="6.0"  StockDepthY="10.0"/>
                            <controls:RackRowControl Title="Row 5" TrayType="Large"  Slots="4"  StockWidthX="8.0"  StockDepthY="10.0"/>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Column="1" Margin="10"
                            Background="{DynamicResource Brush.Panel}"
                            BorderBrush="{DynamicResource Brush.PanelBorder}"
                            BorderThickness="1" CornerRadius="6" Padding="6">
                        <controls:CellOverviewControl ActiveRack="4"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Vise Jaw Management -->
            <TabItem Header="Vise Jaw Management">
                <Grid Background="#1E1E1E">
                    <TextBlock Text="Vise Jaw Management Placeholder"
                               Foreground="LightGray"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

            <!-- Status -->
            <TabItem Header="Status">
                <Grid Background="#1E1E1E">
                    <TextBlock Text="System Status Placeholder"
                               Foreground="LightGray"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

            <TabItem Header="Part Management">
                <controls:PartManagementControl/>
            </TabItem>


        </TabControl>
    </DockPanel>
</Window>
