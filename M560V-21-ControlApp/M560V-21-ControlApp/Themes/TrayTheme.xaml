<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:M560V_21_ControlApp.Controls">

    <!-- ========== Okuma-Style Tray Theme ========== -->

    <!-- Accent & base colors -->
    <Color x:Key="OkumaAccentBlue">#0094FF</Color>
    <Color x:Key="OkumaTrayFaceBlue">#1E2D3C</Color>
    <Color x:Key="OkumaPocketGray">#1C1C1E</Color>
    <Color x:Key="OkumaPanelBorder">#3A3A3A</Color>
    <Color x:Key="OkumaStockUnselectedGray">#3A3A3A</Color>

    <!-- Brush resources -->
    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource OkumaAccentBlue}" />
    <SolidColorBrush x:Key="TrayFaceBlueBrush" Color="{StaticResource OkumaTrayFaceBlue}" />
    <SolidColorBrush x:Key="PocketFillBrush" Color="{StaticResource OkumaPocketGray}" />
    <SolidColorBrush x:Key="PanelBorderBrush" Color="{StaticResource OkumaPanelBorder}" />
    <SolidColorBrush x:Key="UnselectedBrush" Color="{StaticResource OkumaStockUnselectedGray}" />
    <SolidColorBrush x:Key="SelectedBrush" Color="White" />

    <!-- Global TrayRowControl Style -->
    <Style TargetType="{x:Type controls:TrayRowControl}">
        <Setter Property="Background" Value="{StaticResource TrayFaceBlueBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}" />
        <Setter Property="Margin" Value="6" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="OverridesDefaultStyle" Value="False" />
    </Style>
</ResourceDictionary>
